{
  "target_rule": "push_atlas_release",
  "rules":[
    {
      "rule": "direction_vectors_placeholder_ccfv3",
      "execute":
        [
          {
            "brainRegion": "http://api.brain-map.org/api/v2/data/Structure/315",
            "container": "docker://bbpgitlab.epfl.ch:5050/dke/apps/blue_brain_atlas_pipeline:dev",
            "output_dir": "direction_vectors/isocortex/",
            "CLI": {
              "command": "atlas-direction-vectors direction-vectors isocortex  --algorithm shading-blur-gradient  --output-path direction_vectors/isocortex/direction_vectors_ccfv3.nrrd",
              "args": "--hierarchy-path {input.hierarchy}  --annotation-path {input.annotation_ccfv3}"
            }
          },
          {
            "brainRegion": "http://api.brain-map.org/api/v2/data/Structure/549",
            "container": "docker://bbpgitlab.epfl.ch:5050/dke/apps/blue_brain_atlas_pipeline:dev",
            "output_dir": "direction_vectors/thalamus/",
            "CLI": {
              "command": "atlas-direction-vectors direction-vectors thalamus  --output-path direction_vectors/thalamus/direction_vectors_ccfv3.nrrd",
              "args": "--hierarchy-path {input.hierarchy}  --annotation-path {input.annotation_ccfv3}"
            }
          }
        ]
    }
  ]
}
